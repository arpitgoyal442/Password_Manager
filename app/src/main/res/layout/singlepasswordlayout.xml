<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/single_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/single_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:inputType="textPassword"
            android:paddingRight="5dp"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_copy_pass"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_content_copy_24"
            android:backgroundTint="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_switch_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_baseline_remove_red_eye_24"
            android:backgroundTint="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_pass"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_baseline_delete_24"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:backgroundTint="@color/teal_200"
            app:cornerRadius="10dp" />
    </LinearLayout>
</LinearLayout>